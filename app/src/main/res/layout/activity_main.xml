<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:gravity="center_vertical">


                <TextView
                    android:id="@+id/tvWeekday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir"
                    android:text="@string/tvWeekday"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/ivWeatherIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/descWeatherIcon"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/ic_cloudy" />

                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/avenir"
                    android:text="@string/tvTemperature"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="47dp">

                <TextView
                    android:id="@+id/tvFullDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tvFullDate" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:text="@string/tvCity" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="403dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHeatMap"
                    style="@style/SquareButton"
                    android:layout_alignParentStart="true"
                    android:text="@string/btnHeatMap" />

                <Button
                    android:id="@+id/btnBikeRacks"
                    style="@style/SquareButton"
                    android:layout_alignParentRight="true"
                    android:text="@string/btnBikeRacks" />

        </RelativeLayout>

</LinearLayout>
